STORE .T. TO WCARGANDO
DO WHILE WCARGANDO
   @ WLIN06+00,WCOL06+00 CLEAR TO WLIN06+02,WCOL06+50
   @ WLIN06+00,WCOL06+00       TO WLIN06+02,WCOL06+50 DOUBLE
   @ WLIN06+00,WCOL06+12 SAY "TIPOS DE REFERENCIAS "
   @ WLIN06+01,WCOL06+01 SAY "CODIGO:"
   @ WLIN06+01,WCOL06+08 GET WTIPREF
   STORE "INGRESE EL CODIGO DEL TIPO DE REFERENCIA" TO MES
   DO MENSAJE WITH MES
   READ
   IF WTIPREF = SPACE(3) .OR.READKEY()=12.OR.READKEY()=268
      EXIT
   ENDIF
   SELECT 6
   FIND &WTIPREF
   IF EOF()
      STORE .T. TO WINGRESA
      STORE .T. TO WMODIFICA
      STORE "TIPO DE REFERENCIA NO REGISTRADA, INGRESAR ? (S/N)" TO TEX
      STORE "SN" TO WCH
      DO PREGUNTA
      IF WCH = "N"
         LOOP
      ENDIF
      STORE SPACE(18)        TO WDESCRI
   ELSE
      STORE .F. TO WINGRESA
      STORE .F. TO WMODIFICA
      STORE DESCRI           TO WDESCRI
   ENDIF
   @ WLIN06+01, WCOL06+12 SAY WDESCRI
   IF .NOT. WMODIFICA
      STORE "OPCIONES: (M)ODIFICAR, (E)LIMINAR, (S)ALIR" TO TEX
      STORE "SME" TO WCH
      DO PREGUNTA
      STORE WCH TO WRESP
      IF WRESP= "S"
         LOOP
      ELSE
         IF WRESP= "M"
            STORE .T. TO WMODIFICA
         ELSE
            STORE "ESTA SEGURO QUE DESEA ELIMINAR ? (S/N)" TO TEX
            STORE "NS" TO WCH
            DO PREGUNTA
            IF WCH = "N"
               LOOP
            ELSE
                *** CHEQUEAR QUE EL TIPO NO ESTE SIN CONEXIONES
                SELECT 6
                DELETE
                LOOP
            ENDIF
         ENDIF
      ENDIF
   ENDIF

   IF WMODIFICA
      *** DESCRIPCION
      STORE .T. TO WACT
      DO WHILE WACT
         STORE "INGRESE LA DESCRIPCION DEL TIPO DE REFERENCIA" TO MES
         DO MENSAJE WITH MES
         @ WLIN06+01, WCOL06+12 GET WDESCRI
         READ
         IF READKEY()=12.OR.READKEY()=268
            STORE .F. TO WCARGANDO
            EXIT
         ENDIF
         IF WDESCRI <> SPACE(30)
            EXIT
         ENDIF
      ENDDO
      IF .NOT. WCARGANDO
         EXIT
      ENDIF
   ENDIF
   STORE "CONFORME ? (S/N)" TO TEX
   STORE "SN" TO WCH
   DO PREGUNTA
   IF WCH = "N"
      LOOP
   ENDIF
   IF WINGRESA
      DO FILLOC
      APPEND BLANK
      UNLOCK
      DO RECLOC
      REPLACE CODIGO  WITH WTIPREF
   ENDIF
   DO RECLOC
   REPLACE DESCRI     WITH WDESCRI
   FLUSH
   UNLOCK
ENDDO
RETURN


SELECT 6
SAVE SCRE TO WSCRE99
store .t. to viendo
do while viendo
   RESTORE SCRE FROM WSCRE99
   STORE SPACE(3) TO XTIPREF
   @ 04,0 clear to 07,50
   @ 04,0 to 07,50
   @ 04,02 SAY "TIPOS DE REFERENCIAS DE INGRESOS y EGRESOS"
   @ 05,1 say "TIPO        :"
   @ 06,1 say "SALIDA (M/I):"
   @ 05,14 GET XTIPREF
   READ
   IF READKEY()=12 .OR. READKEY()=268
      EXIT
   ENDIF
   IF XTIPREF = SPACE(3)
      STORE "TODOS" TO WTIPREFDES
   ELSE
      STORE "     " TO WTIPREFDES
   ENDIF
   @ 05,30 SAY WTIPREFDES

   STORE "SELECCIONE LA SALIDA: (M)ONITOR, (I)MPRESORA" TO TEX
   STORE "MI" TO WCH
   DO PREGUNTA
   IF READKEY()=12 .OR. READKEY()=268
      LOOP
   ENDIF
   STORE WCH TO WSALIDA
   STORE 0   TO WPAGINA
   STORE 100 TO WLINEA
   IF WSALIDA = "I"
      STORE 55 TO WSALTO
      STORE "IMPRESORA" TO WSALIDES
   ELSE
      STORE 22 TO WSALTO
      STORE "MONITOR" TO WSALIDES
   ENDIF
   @ 06,14 SAY WSALIDA
   @ 06,30 SAY WSALIDES

   STORE "OPCIONES: (C)ONTINUAR, (S)ALIR" TO TEX
   STORE "CS" TO WCH
   DO PREGUNTA
   IF WCH = "S"
      exit
   ENDIF
   IF WSALIDA = "I"
      SET DEVI TO PRINT
   ELSE
      SET DEVI TO SCRE
   ENDIF

   SELECT 6
   GO TOP
   DO WHILE .NOT. EOF()
      *** FILTROS
      IF XTIPREF <> SPACE(3) .AND. XTIPREF <> CODIGO
         SELECT 6
         SKIP
         LOOP
      ENDIF

      *** FIN FILTROS
      STORE WLINEA+1 TO WLINEA
      IF WLINEA >=WSALTO
         STORE WPAGINA + 1 TO WPAGINA
         IF WSALIDA = "M"
            if WPAGINA <> 1
               STORE "OPRIMA <ENTER> PARA CONTINUAR o <ESC> PARA SALIR" TO MES
               DO AVISO WITH MES
               IF READKEY()=12 .OR. READKEY()=268
                  EXIT
               ENDIF
            endif
            @ 0,0 clear
         ENDIF
         IF WSALIDA = "M"
            @ 0,0 SAY QQWW
         ELSE
            @ 0,0 SAY CHR(14)+QQWW
         ENDIF
         @ 1,60 SAY "PAGINA:"+STR(WPAGINA,4)
         @ 2,0 SAY "LISTADO DE TIPOS DE REFERENCIAS DE INGRESO Y EGRESO"
         @ 2,60 SAY "FECHA :"+DTOC(DATE())
         @ 4,0 SAY "CODIGO"
         @ 4,8 SAY "DESCRIPCION"
         @ 5,0 SAY "------"
         @ 5,8 SAY "------------------------------"
         STORE 6 TO WLINEA
      ENDIF
      @ WLINEA , 0 SAY CODIGO
      @ WLINEA , 8 SAY DESCRI
      SELECT 6
      SKIP
   ENDDO
   IF WSALIDA = "M"
      STORE "OPRIMA <ENTER> PARA FINALIZAR" TO MES
      DO AVISO WITH MES
   ELSE
      EJECT
      SET DEVI TO SCRE
   ENDIF
ENDDO
return

